<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EBCC" >

    <EditText
        android:id="@+id/editTextEnterEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/etEnterEmail"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextEnterEmail"
        android:layout_alignRight="@+id/editTextEnterEmail"
        android:layout_below="@+id/editTextEnterEmail"
        android:layout_marginTop="20dp"
        android:text="@string/bSend"
        android:textColor="#FF0A647A" />

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextEnterEmail"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editTextEnterEmail"
        android:gravity="center"
        android:text="@string/FPdialogTitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0A647A" />

</RelativeLayout>